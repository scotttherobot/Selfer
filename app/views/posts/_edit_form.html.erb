<div id="post-<%= @post.id %>" class="row">
   <div class="col-md-6">
      <%= image_tag @post.image, :width => "100%", :class => "img-rounded" %>
   </div>
   <div class="col-md-6">
      <div class="page-header">
         <h4>
            <%= @post.created_at.to_formatted_s(:long_ordinal) %>
         </h4>
      </div>
      <%= form_for @post, :html => { :multipart => true } do |f| %>
         <p>
          <%= f.label :body %><br>
          <%= f.text_area :body %>
         </p>
         <%= f.submit "Save", :class => "btn btn-success" %>
      <% end %>
   </div>
</div>
