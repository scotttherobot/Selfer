<div id="post-<%= post.id %>" class="row">
   <div class="col-md-6">
      <%= link_to (image_tag post.image, :width => "100%", :class => "img-rounded"), post_path(post) %>
   </div>
   <div class="col-md-6">
      <div class="page-header">
         <h4>
            <%= post.created_at.to_formatted_s(:long_ordinal)  %> by <%= link_to post.user.username, user_path(post.user) %>
            <small><%= link_to (pluralize(post.comments.count, "comment")), post_path(post) %></small>
         </h4>
      </div>
      <p><%= post.body %></p>
   </div>
</div>
