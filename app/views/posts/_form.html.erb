<%= form_for @post, :html => { :multipart => true } do |f| %>
   <p id="file_fields">
    <%= f.label :image %><br>
    <%= f.file_field :image, :id => "file_input" %>
   </p>
   <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
   </p>
   <%= f.submit "Post!", :class => "btn btn-success" %>
<% end %>
